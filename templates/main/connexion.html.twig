{% extends 'base.html.twig' %}

{% block title %}{{controller_name}}{% endblock %}

{% block header %}

{% endblock %}

{% block stylesheets %}
<!-- CSS PERSO -->
<style media="screen">
  body {
    background: #595494; /* fallback for old browsers */
    background: -webkit-linear-gradient(right, #595494, #595494);
    background: -moz-linear-gradient(right, #595494, #595494);
    background: -o-linear-gradient(right, #595494, #595494);
    background: linear-gradient(to left, #595494, #595494);
    font-family: "Poppins", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    overflow:hidden;
  }

  .wrapper {
    position: absolute;
    top: 0;
    bottom: 0;
  }
</style>

<!-- CSS BACKGROUND WAVE -->
<style>
  [id^="instance"] .demo {
      width: 100%;
      height: 100%;
  }
  #instance,
  #instance2 {
      position: absolute;
      width: 100%;
      height: 100%;
      margin: auto;
      bottom: 0;
  }
  #instance canvas,
  #instance2 canvas {
      border-radius: 0 !important;
  }
  #instance .btn {
      border-color: ##090723;
      background-color: ##090723;
  }
</style>

<!-- CSS FOR FORM LOGIN -->
<style media="screen">
  @import url(https://fonts.googleapis.com/css?family=Poppins:300);

  img.logologin {
    width: 100%;
    float: none;
    margin-bottom: 1em;
  }

  .login-page {
    width: 100%;
    padding: 45% 0 0;
    margin: auto;
  }
  .form {
    position: relative;
    z-index: 1;
    background: #FFFFFF;
    max-width: 360px;
    margin: 0 auto 100px;
    padding: 45px;
    text-align: center;
    box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
    border-radius: 50px;
  }
  .form input {
    font-family: "Poppins", sans-serif;
    outline: 0;
    background: #f2f2f2;
    width: 100%;
    border: 0;
    margin: 0 0 15px;
    padding: 15px;
    box-sizing: border-box;
    font-size: 14px;
    border-radius: 50px;

  }
  .form button {
    font-family: "Poppina", sans-serif;
    text-transform: uppercase;
    outline: 0;
    background: #595494;
    width: 100%;
    border: 0;
    padding: 15px;
    color: #FFFFFF;
    font-size: 14px;
    -webkit-transition: all 0.3 ease;
    transition: all 0.3 ease;
    cursor: pointer;
    border-radius: 50px;

  }
  .form button:hover,.form button:active,.form button:focus {
    background: #66cccc;
    transition: background-color 0.9s ease;
  border-radius: 50px;


  }
  .form .message {
    margin: 15px 0 0;
    color: #b3b3b3;
    font-size: 12px;
  }
  .form .message a {
    color: #595494;
    text-decoration: none;
  }
  .form .register-form {
    display: none;
  }
  .container {
    position: relative;
    z-index: 1;
    max-width: 300px;
    margin: 0 auto;
  }
  .container:before, .container:after {
    content: "";
    display: block;
    clear: both;
  }
  .container .info {
    margin: 50px auto;
    text-align: center;
  }
  .container .info h1 {
    margin: 0 0 15px;
    padding: 0;
    font-size: 36px;
    font-weight: 300;
    color: #1a1a1a;
  }
  .container .info span {
    color: #4d4d4d;
    font-size: 12px;
  }
  .container .info span a {
    color: #000000;
    text-decoration: none;
  }
  .container .info span .fa {
    color: #EF3B3A;
  }
</style>
{% endblock %}

{% block body %}
<!-- WAVE -->
<div id="instance">
    <div class="demo"></div>
</div>

<!-- MAIN CONTENT -->
<div class="main-section">
  <div class="container">
    <div class="main-section-data">
      <div class="login-page">
        <div class="form" style="display:none;">
          <center><img class="logologin" src="{{asset('images/logo/logoForBgWhite.png')}}" alt="Logo TwittAdventure"></center><br>
          <form class="register-form" method="post" action="#">
            <input type="text" name="name" placeholder="Prénom* & Nom*"/>
            <input type="password" name="email" placeholder="Email*"/>
            <input type="text" name="message" placeholder="Votre message"/>
            <button type="submit" value="1" name="submitContact">Soumettre</button>
            <p class="message">Commencer l'aventure? <br><a href="#">Je veux jouer</a></p>
          </form>
          <form class="login-form" method="post" action="#">
              <input type="text" name="pseudo" class="inputPseudo" placeholder="@TonPseudo"/>
            <!-- <input type="password" placeholder="Your Password"/> -->
            <button type="submit" name="submitPseudo" value="1" class="sendLogin">Let's Go</button>
            <p class="message">Un problème? <br><a href="#">Contactez-nous</a></p>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{asset('lib/jparticles/jparticles.js')}}"></script>
<script type="text/javascript" src="{{asset('lib/jparticles/wave_loading.js')}}"></script>
<!-- SCRIPT BG WAVE -->
<script type="text/javascript">
  (function () {
      var instance = document.getElementById('instance');
      var demo = instance.querySelector('.demo');
      var loading = new JParticles.waveLoading(demo, {

          font: 'normal 900 30px Arial',

          smallFont: 'normal 900 24px Arial',

          smallFontOffsetTop: 2,

          color: '#090723',

          fillColor: '#090723',

          offsetLeft: 3,

          crestHeight: 8,

          rippleNum: 2,

          speed: .35,

          duration: 3000,

          easing: 'linear'
      });

      $(".sendLogin").click(function(){
        loading.done();
      });

  })();
</script>

<!-- SCRIPT FORM LOGIN -->
<script type="text/javascript">
$('.message a').click(function(){
   $('form').animate({height: "toggle", opacity: "toggle"}, "slow");
});
</script>

{% endblock %}
